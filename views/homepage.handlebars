<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Electric Sheep - A Dream Journal</title>
</head>

<!-- Page Content -->
<div class="container">
  <div class="row">

    <!-- New Dream Button (only visible to logged in users) -->
    {{#if logged_in}}
    <div class="col-sm-2 sidenav">
      <a type="button" class="btn btn-primary" style="color: white; background-color: #5b88ae;" href="/new-dreams" id="new-dream">+ New Dream</a>
      {{/if}}
    </div>

  <!-- Post Content Column -->
  <div class="col-sm-9">

    <!-- Blurb (only visible to users who are not logged in) -->

    <div class="blurb">
      <h4>Welcome to Electric Sheep!</h4>
      This blog is for keeping track of your dreams.
    </div>


  <!-- Recent Dreams Image -->
  <div id="recent-img">
    <img src="./img/recent-dreams.png" >
  </div>

    <!-- Dream Title -->
    {{#each dreams as |dream| }}
    <p class="lead">
      {{dream.subject}}
    </p>

    <!-- Date/Author-->
     <p><em>Posted on {{format_date dream.createdAt}} by <b>{{user.user_name}}</em></b></p>

    <!-- Dream Content -->
    {{dream.body}}

    <hr>
  {{/each}}
  </div>
  </body>
